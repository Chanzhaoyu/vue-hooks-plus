{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist", //输出文件
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "rootDir": "./",
    "types": ["node", "vitest", "vitest/globals"],
    "paths": {
      "@/*": ["src/*"],
      "vue-hooks-plus": ["src/index.ts"],
      "test-utils/*": ["test-utils/*"],
      "@vue-hooks-plus/use-immer": ["../packages/use-immer/src/index.ts"],
      "@vue-hooks-plus/use-worker": ["../packages/use-worker/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/demo/*.vue"],
  "exclude": ["node_modules", "dist", "lib", "es", "example", "test-utils/*"]
}
